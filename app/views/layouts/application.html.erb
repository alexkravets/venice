<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
<!-- META TAGS ============================================================ -->
<%= include_meta_tags %>
<!-- ====================================================================== -->
  <meta name="viewport" content="initial-scale=1" />
  <%= stylesheet_link_tag :application, media: "all" %>
  <style>
    <%= @settings[:styles]["css"].html_safe %>
  </style>
</head>
<body class="<%= body_class %>">
  <%= render 'header' %>

  <div class="container">
    <%= yield %>
  </div>

  <%= render 'footer' %>
  <%= render 'javascript' %>
</body>
</html>